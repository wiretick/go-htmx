package post

import (
	"fmt"
	"github.com/wiretick/go-htmx/data"
)

templ Index(posts []data.Post) {
	<div>
	for i := range posts {
		<div>
			<a href={ templ.URL(fmt.Sprintf("/posts/%d", i)) }>
				<h3>post</h3>
			</a>
		</div>
	}
	</div>
}

templ Show(p data.Post) {
	<div>
		<a href="/posts">Go back</a>
		<p>{ p.Body }</p>
	</div>
}
